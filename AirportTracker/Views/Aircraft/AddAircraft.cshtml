<p>This is the add aircraft page</p>

<form asp-action="AddAircraft" method="post">
    <input type="hidden" asp-for="AircraftId"/>

    <div>
        <label asp-for="Name" class="form-label">Name of Aircraft</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Type" class="form-label">Type of Aircraft</label>
        <input asp-for="Type" class="form-control" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Capacity" class="form-label">Capacity</label>
        <input asp-for="Capacity" class="form-control" />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-action="ListAircraft" class="btn btn-primary">Cancel</a>
</form>