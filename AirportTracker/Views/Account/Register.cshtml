@model RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<html>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AirportTracker.styles.css" asp-append-version="true" />
</head>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<img src="@Url.Content("~/images/registerBackground.webp")" alt="registerBackground" class="backgroundImage" />
<form method="post" asp-action="Register">
    <div class="container d-flex justify-content-center">
        <div class="col-md-6">
            <!-- Username -->
            <div class="row mb-2 text-center">
                <label class="col-form-label formLabel">Username:</label>
                <input asp-for="Username" class="form-control registerInput" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="row mb-2 text-center">
                <label class="col-form-label formLabel">Password:</label>
                <input type="password" asp-for="Password" class="form-control registerInput" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Confirm Password -->
            <div class="row mb-2 text-center">
                <label class="col-form-label formLabel">Confirm Password:</label>
                <input type="password" asp-for="ConfirmPassword" class="form-control registerInput" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- First Name -->
            <div class="row mb-2 text-center">
                <label class="col-form-label formLabel">First Name:</label>
                <input asp-for="fName" class="form-control registerInput" />
                <span asp-validation-for="fName" class="text-danger"></span>
            </div>

            <!-- Last Name -->
            <div class="row mb-2 text-center">
                <label class="col-form-label formLabel">Last Name:</label>
                <input asp-for="lName" class="form-control registerInput" />
                <span asp-validation-for="lName" class="text-danger"></span>
            </div>

            <!-- Register and Cancel buttons -->
            <div class="row">
                <div class="col registerButton">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </div>
        </div>
    </div>


</form>
</html>
