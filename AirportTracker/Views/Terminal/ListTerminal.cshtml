@model List<Terminal>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<p>This is the list terminal page</p>
<a asp-action="AddTerminal" asp-controller="Terminal">Add Terminal</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Airport Name</th>
            <th>Terminal Name</th>
            <th>Terminal ID</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var terminal in Model)
        {
            <tr>
                <td>@terminal.Airport.Name</td>
                <td>@terminal.TerminalName</td>
                <td>@terminal.TerminalId</td>
            </tr>
        }
    </tbody>
</table>